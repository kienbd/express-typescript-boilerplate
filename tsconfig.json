{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src*": [
        "src*"
      ],
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist"
  ]
}